
@{
    ViewBag.Title = "سپردن ملک";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Amirhome.Models.State

@{
    List<Amirhome.Models.Feature> ftrs = ViewData["Features"] as List<Amirhome.Models.Feature>;
    List<Amirhome.Models.province> prv = ViewData["Province"] as List<Amirhome.Models.province>;

    int uid_role = 0;
    if (ViewData["user_role_id"] != null)
    {
        uid_role = int.Parse(ViewData["user_role_id"].ToString());   
    }
}

<link rel="stylesheet" href="~/Content/SubmitEstateStyle.css" />

<div style="width: 590px; display: none;  margin: 10% auto 0;" id="OwnerSearch" class="popup modal fade">
    <div class="header">جستجوی مالک</div>
    <div align="right">
        <a class="close" href="javascript:void(0);" onclick="$('#OwnerSearch').modal('hide');">
            <span class="fa fa-times-circle fa-fw"></span>
        </a>
    </div>
    <div class="body" id="OwnerSearchBody">
    </div>
</div>

<div class="container body-content">
    <h1>سپردن ملک</h1>
    <hr />
    <form action="/Estate/SubmitEstate" method="post" enctype="multipart/form-data">
        <ul class="submit-wizard">
            <li class="active" data-step="0">
                <div class="wizard-heading">
                    ۱ - مشخصات مالک
                    <span class="glyphicon glyphicon-user"></span>
                </div>
                <div class="wizard-content">
                        <p class="text-danger"> @ViewBag.ErrMsg </p>
                    <br />
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-2 left">
                            <label>نام و نام خانوادگی *</label>
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.Owner.Name, new { @class="required form-control" })
                            @if (uid_role < 5 && uid_role > 0)
                            {
                                <a href="javascript:void(0)" onclick="search_owner('Name');"><i class="glyphicon glyphicon-search"></i></a>
                            }
                        </div>
                        <div class="col-md-2 left">
                            <label>پست الکترونیک</label>
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.Owner.Email, new { @class = "form-control" })
